 <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-12">
              <div class="panel">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                      Editar Conta
                    </div>
                </div>
                <div class="panel-body">
                  <div class="col-lg-7">
                    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                      <%= f.error_notification %>

                      <div class="form-inputs">
                         <%= f.input :email, placeholder: 'Email', :label => 'Email', :wrapper => false, :input_html => { :class => "form-control" }  %>

                        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
                        <% end %>

                        <%= f.input :password, placeholder: 'Senha', :label => 'Senha', :wrapper => false, :input_html => { :class => "form-control" }  %>
                        <%= f.input :password_confirmation, placeholder: 'Senha', :label => 'Confirmação de senha', :wrapper => false, :input_html => { :class => "form-control" }  %>
                        <hr>
                        <%= f.input :current_password, :label => 'Senha atual', hint: " *precisamos da sua senha atual para confirmar qualquer mudança", :wrapper => false, required: true, :input_html => { :class => "form-control" }  %>
                      </div>

                      <div class="form-actions" style="margin-top: 10px;">
                        <a href="/admin/areas" style="margin-right: 5px;"><input type="button" class="btn btn-default" value="Voltar"></a> <%= f.button :submit, "Atualizar", :class=>'btn btn-primary' %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
</div>