<%= render "devise/shared/links" %>

<style type="text/css">
 	label{
 		display: block;
 	}
 </style>
 <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-12">
              <div class="panel">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                      Esqueceu sua senha?
                    </div>
                </div>
                <div class="panel-body">
                	<div class="col-lg-7">
                		<%= f.error_notification %
						<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
						  <%= f.error_notification %>

						  <div class="form-inputs">
						    <%= f.input :nome, placeholder: 'Nome', :label => 'Nome', :wrapper => false, :input_html => { :class => "form-control" }  %>
                <%= f.input :email, placeholder: 'Email', :label => 'Email', :wrapper => false, :input_html => { :class => "form-control" }  %>
						    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} caracteres no mínimo" if @validatable), placeholder: 'Senha', :label => 'Senha', :wrapper => false, :input_html => { :class => "form-control" }  %>
						     <%= f.input :password_confirmation, placeholder: 'Senha', :label => 'Confirmação de senha', :wrapper => false, :input_html => { :class => "form-control" }  %>
                 <label>Permissão:</label>
                 <%= f.select(:roles_mask,  [['Usuário', '2'],
                             ['Admin', '1'],], {}, { :class => 'form-control', :style => 'width:120px;'} )%>
						  </div>

						  <div class="form-actions" style="margin-top: 10px;">
						    <a href="/admin/areas" style="margin-right: 5px;"><input type="button" class="btn btn-default" value="Voltar"></a> <%= f.button :submit, "Cadastrar", :class=>'btn btn-primary' %>
						  </div>
						<% end %>
					</div>
                </div>
              </div>
            </div>
          </div>
        </div>
</div>