 <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-12">
              <div class="panel">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                      Editar Conta
                    </div>
                </div>
                <div class="panel-body">
                  <div class="col-lg-7">
                    <%= simple_form_for('edit-form', as: 'edit-form', url: '/usuarios/edit', html: { method: :post }) do |f| %>
                      <%= f.error_notification %>

                      <div class="form-inputs">
                         <input type="hidden" value="<%=@user[0].id.to_s%>" name="user_id">
                         <label>Nome</label>
                         <input type="text" name="nome" value="<%=@user[0].nome%>" class="form-control">
                         <label>Email</label>
                         <input type="text" name="email" value="<%=@user[0].email%>" class="form-control">

                        <%#= f.input :password, placeholder: 'Senha', :label => 'Senha', :wrapper => false, :input_html => { :class => "form-control" }  %>
                        <%#= f.input :password_confirmation, placeholder: 'Senha', :label => 'Confirmação de senha', :wrapper => false, :input_html => { :class => "form-control" }  %>
                        <!--<hr>-->
                        <%#= f.input :current_password, :label => 'Senha atual', hint: " *precisamos da sua senha atual para confirmar qualquer mudança", :wrapper => false, required: true, :input_html => { :class => "form-control" }  %>
                      </div>

                      <div class="form-actions" style="margin-top: 10px;">
                        <a href="/admin/usuarios" style="margin-right: 5px;"><input type="button" class="btn btn-default" value="Voltar"></a> <%= f.button :submit, "Atualizar", :class=>'btn btn-primary' %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
</div>