<% content_for :style do -%>
  <%= stylesheet_link_tag 'StyleAreas' %>
  <%= stylesheet_link_tag 'StyleCores' %>
<% end -%>


    <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-12">
                  <!--breadcrumbs start -->
                  <ul class="breadcrumb" style="background: #fff">
                      <li><a href="/admin/home"><i class="fa fa-home"></i> Home</a></li>
                      <li class="active"><a href="#">Conteúdos</a></li>
                  </ul>
                  <!--breadcrumbs end -->
              </div>
          </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel">
                <div class="panel panel-primary">
                    <div class="panel-heading">Lista de conteúdos <%= link_to 'Novo conteúdo', new_admin_conteudo_path, :class => 'btn btn-default' %></div>
                </div>
                <div class="panel-body">
                <!---->
                <div class="boxForm">
                    
                    <div class="clearAll">&nbsp;</div>
                    
                    <%= if flash[:notice]
                         raw('<div class="alert alert-success fade in msgSucesso"><button data-dismiss="alert" class="close close-sm" type="button"><i class="fa fa-times"></i></button>' + flash[:notice] + '</div>')
                    end %>
                    <div class="formAddNovo">
                        <div  data-intro='Digite o nome ou parte dele que deseja buscar de um conteúdo.' data-step='2' data-position='right' class="divTourBusca">
                        <%= form_tag('/admin/conteudos', :method => 'get',  :id => "products_search")  do %> 
                            <%= text_field_tag :search, params[:search], :placeholder => "Digite o titulo do conteúdo", :class => 'search1 form-control'%>  
                            <%= submit_tag "Buscar", :name => nil, :class => 'btn btn-info' %>  
                            <% end %>
                        </div>
                        <div  data-intro='Este grid possui a listagem com todos os conteúdos cadastrados.' data-step='3' data-position='top' class="divTourGrid posRelative">
                            <div id="gridItens">
                                 <%= render 'grid' %>
                            </div>
                            <div class="maskLoader"></div>
                        </div>
                        
                        
                        <div class="clearAll">&nbsp;</div>
                    </div>
                </div>
                <span class="loader"><img src="/images/loaderHand.gif" /></span>
                <!---->
                </div>
            </div>
        </div>
    </div>


   
        
 
	